<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

  <jmxConfigurator/>

  <property name="CONSOLE_LOG_PATTERN_DEBUG" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p ${PID:- } [%-30.30logger{29}:%L] - %m%n"/>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${CONSOLE_LOG_PATTERN_DEBUG}</pattern>
    </encoder>
  </appender>

  <!--<logger name="org.apache.hadoop" level="ERROR"/>
  <logger name="org.apache.spark" level="ERROR"/>
  <logger name="io.netty" level="ERROR"/>
  <logger name="org.spark_project.jetty" level="ERROR"/>
  <logger name="org.apache.zookeeper" level="ERROR"/>
  <logger name="org.apache.solr" level="ERROR"/>
  <logger name="org.apache.http" level="ERROR"/>
  <logger name="org.apache.commons" level="ERROR"/>
  <logger name="httpclient" level="ERROR"/>-->

  <root level="DEBUG">
    <appender-ref ref="CONSOLE"/>
  </root>
</configuration>
